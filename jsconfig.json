{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "baseUrl": "./",
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "client/src/*"
      ],
      "#scss/*": [
        "client/src/scss/*"
      ],
      "#/config/*": [
        "server/config/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "./client/src/**/*",
    "./server/**/*"
  ],
  "exclude": [
    "./server/public"
  ]
}
